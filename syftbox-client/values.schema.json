{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
      "image": {
        "description": "SyftBox client image configuration",
        "type": "object",
        "properties": {
          "repository": {
            "description": "Docker image repository",
            "type": "string",
            "default": "syftboxregistry.azurecr.io/samples/syftbox"
          },
          "tag": {
            "description": "Docker image tag",
            "type": "string",
            "default": "latest"
          },
          "pullPolicy": {
            "description": "Docker image pull policy",
            "type": "string",
            "enum": ["Always", "IfNotPresent", "Never"],
            "default": "IfNotPresent"
          },
          "imagePullSecrets": {
            "description": "Docker registry secrets",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            },
            "default": []
          }
        }
      },
      "deploymentType": {
        "description": "Type of deployment to use",
        "type": "string",
        "enum": ["deployment", "statefulset"],
        "default": "deployment"
      },
      "client": {
        "description": "SyftBox client configuration",
        "type": "object",
        "properties": {
          "server": {
            "description": "Server connection configuration",
            "type": "object",
            "properties": {
              "url": {
                "description": "Full server URL",
                "type": "string",
                "default": "http://syftbox-server.syftbox-system.svc.cluster.local:8000"
              },
              "host": {
                "description": "Server hostname (used if url not provided)",
                "type": "string",
                "default": ""
              },
              "port": {
                "description": "Server port (used if url not provided)",
                "type": "integer",
                "default": 8000
              }
            }
          },
          "email": {
            "description": "Client email identity",
            "type": "string",
            "default": "client@openmined.org"
          },
          "configPath": {
            "description": "Path to config file inside container",
            "type": "string",
            "default": "/data/config.json"
          },
          "config": {
            "description": "Client configuration values",
            "type": "object",
            "properties": {
              "client_id": {
                "description": "Client identifier",
                "type": "string",
                "default": "syftbox-client"
              },
              "log_level": {
                "description": "Logging level",
                "type": "string",
                "enum": ["debug", "info", "warning", "error"],
                "default": "info"
              },
              "enable_metrics": {
                "description": "Enable metrics collection",
                "type": "boolean",
                "default": false
              }
            }
          },
          "extraEnv": {
            "description": "Additional environment variables",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                }
              }
            },
            "default": []
          }
        }
      },
      "persistence": {
        "description": "Persistence configuration",
        "type": "object",
        "properties": {
          "enabled": {
            "description": "Enable persistent storage",
            "type": "boolean",
            "default": true
          },
          "existingClaim": {
            "description": "Use existing PVC (only for deployment type)",
            "type": "string",
            "default": ""
          },
          "storageClass": {
            "description": "Storage class name",
            "type": "string",
            "default": ""
          },
          "accessMode": {
            "description": "Access mode for the volume",
            "type": "string",
            "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"],
            "default": "ReadWriteOnce"
          },
          "size": {
            "description": "Storage size",
            "type": "string",
            "default": "2Gi"
          },
          "annotations": {
            "description": "PVC annotations",
            "type": "object",
            "default": {}
          }
        }
      },
      "resources": {
        "description": "Resource limits and requests",
        "type": "object",
        "properties": {
          "limits": {
            "type": "object",
            "properties": {
              "cpu": {
                "type": "string",
                "default": "1000m"
              },
              "memory": {
                "type": "string",
                "default": "1Gi"
              }
            }
          },
          "requests": {
            "type": "object",
            "properties": {
              "cpu": {
                "type": "string",
                "default": "500m"
              },
              "memory": {
                "type": "string",
                "default": "512Mi"
              }
            }
          }
        }
      },
      "serviceAccount": {
        "description": "Service account configuration",
        "type": "object",
        "properties": {
          "create": {
            "description": "Create service account",
            "type": "boolean",
            "default": true
          },
          "annotations": {
            "description": "Service account annotations",
            "type": "object",
            "default": {}
          },
          "name": {
            "description": "Service account name",
            "type": "string",
            "default": ""
          }
        }
      },
      "podAnnotations": {
        "description": "Pod annotations",
        "type": "object",
        "default": {}
      },
      "podSecurityContext": {
        "description": "Pod security context",
        "type": "object",
        "default": {}
      },
      "securityContext": {
        "description": "Container security context",
        "type": "object",
        "default": {}
      },
      "nodeSelector": {
        "description": "Node selector",
        "type": "object",
        "default": {}
      },
      "tolerations": {
        "description": "Pod tolerations",
        "type": "array",
        "items": {
          "type": "object"
        },
        "default": []
      },
      "affinity": {
        "description": "Pod affinity",
        "type": "object",
        "default": {}
      },
      "headlessService": {
        "description": "Headless service configuration (for StatefulSet)",
        "type": "object",
        "properties": {
          "enabled": {
            "description": "Enable headless service",
            "type": "boolean",
            "default": true
          },
          "port": {
            "description": "Headless service port",
            "type": "integer",
            "default": 8000
          }
        }
      }
    }
  }